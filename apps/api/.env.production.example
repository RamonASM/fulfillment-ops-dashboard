# =============================================================================
# INVENTORY INTELLIGENCE PLATFORM - Production Configuration
# =============================================================================

# Environment
NODE_ENV=production

# Server
PORT=3001
API_URL=https://api.inventoryiq.com

# Frontend URLs (for CORS)
WEB_URL=https://app.inventoryiq.com
PORTAL_URL=https://portal.inventoryiq.com

# Database (use connection pooling in production)
DATABASE_URL="postgresql://user:password@db.example.com:5432/inventory_prod?schema=public&connection_limit=10&pool_timeout=20"

# Redis
REDIS_URL="redis://:password@redis.example.com:6379"

# JWT Authentication (use strong secret in production!)
JWT_SECRET=generate-a-strong-random-string-at-least-64-chars
JWT_EXPIRES_IN=7d

# Cookie settings
COOKIE_DOMAIN=.inventoryiq.com
COOKIE_SECURE=true

# AI Features
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# Email
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=SG.xxx
EMAIL_FROM=noreply@inventoryiq.com

# File Storage
STORAGE_TYPE=s3
S3_BUCKET=inventoryiq-uploads
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Logging
LOG_LEVEL=warn
